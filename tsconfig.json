{
  "compilerOptions": {
    "target": "es5",
    "module": "amd",
    "declaration": true,
    "sourceMap": true,
    "outFile": "./dist/makeSuffix.js",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true
  },
  "exclude": ["node_modules", "**/*.test.ts"]
}
